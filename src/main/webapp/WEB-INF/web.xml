<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>calculator</display-name>
  <welcome-file-list>
    <welcome-file>/menu</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>AuthFilt</filter-name>
    <filter-class>filters.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthFilt</filter-name>
    <url-pattern>/shoppingcart</url-pattern>
    <url-pattern>/item</url-pattern>
  </filter-mapping>
  <servlet>
    <display-name>MailServlet</display-name>
    <servlet-name>MailServlet</servlet-name>
    <servlet-class>servlets.MailServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MailServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ShoppingCartServlet</servlet-name>
    <servlet-class>servlets.ShoppingCartServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ShoppingCartServlet</servlet-name>
    <url-pattern>/shoppingcart</url-pattern>
  </servlet-mapping>
</web-app>